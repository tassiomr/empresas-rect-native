{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "rules" : {
    "arrow-body-style": "off",
    "react/no-unused-state": "off",
    "global-require": "off",
    "no-shadow": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/no-did-update-set-state": "off",
    "react/jsx-filename-extension": "off"
  },
  
}